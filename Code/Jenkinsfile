pipeline {
    agent any
    
    environment {
        EC2_IP = sh(script: "curl -s http://169.254.169.254/latest/meta-data/public-ipv4", returnStdout: true).trim()
        APP_URL = "http://${EC2_IP}"
        BACKEND_URL = "http://${EC2_IP}:3000"
    }
    
    stages {
        stage('ğŸ“¦ Checkout Code') {
            steps {
                echo "1. ğŸ“¥ Baixando cÃ³digo do GitHub..."
                git branch: 'main',
                    url: 'https://github.com/anagierse/Projeto-2---Servi-os-em-Nuvem.git'
                
                sh 'ls -la'
            }
        }
        
        stage('ğŸ”¨ Build Images') {
            steps {
                echo "2. ğŸ³ Construindo imagens Docker..."
                sh 'docker-compose build --no-cache'
                
                sh 'docker images | head -10'
            }
        }
        
        stage('ğŸš€ Deploy') {
            steps {
                echo "3. ğŸš€ Fazendo deploy..."
                script {
                    sh 'docker-compose down || true'
                    
                    sh 'docker system prune -f || true'
                    
                    sh 'docker-compose up -d'
                    
                    sleep 30
                    
                    sh 'docker-compose ps'
                }
            }
        }
        
        stage('ğŸ¥ Health Check') {
            steps {
                echo "4. ğŸ” Verificando saÃºde dos serviÃ§os..."
                script {
                    sh """
                        echo "Testando Backend (${BACKEND_URL})..."
                        curl -s -o /dev/null -w 'Backend: %{http_code}\n' ${BACKEND_URL} || echo "Backend com possÃ­vel problema"
                        
                        echo "Testando Frontend (${APP_URL})..."
                        curl -s -o /dev/null -w 'Frontend: %{http_code}\n' ${APP_URL} || echo "Frontend com possÃ­vel problema"
                    """
                }
            }
        }
        
        stage('ğŸ“Š Display Info') {
            steps {
                echo "5. ğŸŒ URLs de Acesso:"
                script {
                    echo "âœ… DEPLOY COMPLETO!"
                    echo "ğŸ‘‰ Seu App: ${APP_URL}"
                    echo "ğŸ‘‰ Backend API: ${BACKEND_URL}"
                    echo "ğŸ‘‰ Jenkins: ${APP_URL}:8080"
                    
                    currentBuild.description = "App: ${APP_URL} | API: ${BACKEND_URL}"
                }
            }
        }
    }
    
    post {
        always {
            echo "6. ğŸ§¹ Limpando workspace..."
            cleanWs()
        }
        success {
            echo "ğŸ‰ PIPELINE EXECUTADO COM SUCESSO!"
            echo "ğŸŒ Acesse seu app em: ${APP_URL}"
        }
        failure {
            echo "âŒ Pipeline falhou - verifique os logs acima"
        }
    }
}