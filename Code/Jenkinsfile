pipeline {
    agent any
    
    environment {
        EC2_IP = sh(script: "curl -s http://169.254.169.254/latest/meta-data/public-ipv4", returnStdout: true).trim()
    }
    
    stages {
        stage('ğŸ“¥ Checkout Code') {
            steps {
                echo "1. ğŸ“¥ Baixando cÃ³digo do GitHub..."
                checkout scm
                sh 'echo "ğŸ“ Estrutura de pastas:" && ls -la'
            }
        }
        
        stage('ğŸ³ Build com Docker') {
            steps {
                echo "2. ğŸ³ Construindo imagens com Docker..."
                dir('Code') {
                    sh 'docker build -t meu-frontend ./frontend'
                    sh 'docker build -t meu-backend ./backend'
                }
            }
        }
        
        stage('ğŸš€ Deploy') {
            steps {
                echo "3. ğŸš€ Iniciando containers..."
                script {
                    sh 'docker stop frontend-container backend-container || true'
                    sh 'docker rm frontend-container backend-container || true'
                    
                    sh 'docker run -d --name backend-container -p 3000:3000 meu-backend'
                    sh 'docker run -d --name frontend-container -p 80:80 meu-frontend'
                    
                    sleep 20
                }
            }
        }
        
        stage('âœ… Verify') {
            steps {
                echo "4. âœ… Verificando deploy..."
                script {
                    sh 'docker ps'
                    sh """
                        echo " "
                        echo "ğŸ‰ DEPLOY COMPLETO!"
                        echo "ğŸŒ Frontend: http://${EC2_IP}"
                        echo "ğŸ”§ Backend: http://${EC2_IP}:3000"
                        echo "âš™ï¸ Jenkins: http://${EC2_IP}:8080"
                        echo " "
                    """
                }
            }
        }
    }
    
    post {
        always {
            echo "ğŸ§¹ Finalizando pipeline..."
            deleteDir()
        }
        success {
            echo "âœ… SUCESSO! App rodando em: http://${EC2_IP}"
        }
        failure {
            echo "âŒ Erro no pipeline."
        }
    }
}