pipeline {
    agent any
    
    stages {
        stage('ğŸ“¥ Checkout') {
            steps {
                checkout scm
                sh '''
                    echo "ğŸ“ Estrutura do projeto:"
                    ls -la Code/
                    echo "ğŸ” Verificando .env do repositÃ³rio:"
                    cat Code/.env || echo "âŒ .env nÃ£o encontrado no repo"
                '''
            }
        }
        
        stage('ğŸ”§ Build Images') {
            steps {
                sh '''
                    echo "ğŸ³ Construindo imagens..."
                    docker build -t backend-app ./Code/backend
                    docker build -t frontend-app ./Code/frontend
                    echo "âœ… Imagens construÃ­das"
                '''
            }
        }
        
        stage('ğŸš€ Deploy com VariÃ¡veis Corretas') {
            steps {
                sh '''
                    echo "ğŸ”„ Reiniciando containers..."
                    
                    # Para e remove containers de app
                    docker stop code-backend-1 code-frontend-1 2>/dev/null || echo "Containers nÃ£o existiam"
                    docker rm code-backend-1 code-frontend-1 2>/dev/null || echo "Containers jÃ¡ removidos"
                    
                    echo "ğŸ¯ Iniciando containers COM VARIÃVEIS CORRETAS..."
                    
                    # Backend com variÃ¡veis inline (substitua pelos seus valores reais)
                    docker run -d --name code-backend-1 -p 3000:3000 \
                      -e DB_HOST=receitas-db.xxxxx.us-east-1.rds.amazonaws.com \
                      -e DB_NAME=db_receitas \
                      -e DB_USER=receitas_admin \
                      -e DB_PASSWORD=MinhaSenhaSegura123 \
                      -e DB_PORT=5432 \
                      backend-app
                      
                    # Frontend
                    docker run -d --name code-frontend-1 -p 80:80 \
                      frontend-app
                    
                    echo "â³ Aguardando inicializaÃ§Ã£o..."
                    sleep 25
                '''
            }
        }
        
        stage('âœ… Health Check') {
            steps {
                sh '''
                    echo "ğŸ“Š Containers ativos:"
                    docker ps --format "table {{.Names}}\\t{{.Status}}\\t{{.Ports}}"
                    
                    echo "ğŸ” Verificando variÃ¡veis no container:"
                    docker exec code-backend-1 printenv | grep DB
                    
                    echo "ğŸ§ª Testando serviÃ§os..."
                    
                    # Teste backend
                    if curl -s -f http://localhost:3000 > /dev/null; then
                        echo "ğŸ‰ Backend ONLINE - http://23.22.57.128:3000"
                    else
                        echo "âŒ Backend OFFLINE"
                        docker logs code-backend-1 --tail=15
                    fi
                    
                    # Teste frontend  
                    if curl -s -f http://localhost:80 > /dev/null; then
                        echo "ğŸ‰ Frontend ONLINE - http://23.22.57.128"
                    else
                        echo "âŒ Frontend OFFLINE"
                        docker logs code-frontend-1 --tail=10
                    fi
                '''
            }
        }
    }
    
    post {
        success {
            echo "ğŸŠ DEPLOY SUCESSO!"
            echo "ğŸŒ Frontend: http://23.22.57.128"
            echo "ğŸ”§ Backend: http://23.22.57.128:3000"
        }
        failure {
            echo "ğŸ’¥ DEPLOY FALHOU"
        }
    }
}