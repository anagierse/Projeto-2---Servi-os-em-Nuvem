pipeline {
    agent any
    
    environment {
        EC2_IP = sh(script: "curl -s http://169.254.169.254/latest/meta-data/public-ipv4", returnStdout: true).trim()
    }
    
    stages {
        stage('📥 Checkout Code') {
            steps {
                echo "1. 📥 Baixando código do GitHub..."
                checkout scm
                sh 'echo "📁 Estrutura de pastas:" && ls -la'
            }
        }
        
        stage('🐳 Build com Docker') {
            steps {
                echo "2. 🐳 Construindo imagens com Docker..."
                dir('Code') {
                    sh 'docker build -t meu-frontend ./frontend'
                    sh 'docker build -t meu-backend ./backend'
                }
            }
        }
        
        stage('🚀 Deploy') {
            steps {
                echo "3. 🚀 Iniciando containers..."
                script {
                    sh 'docker stop frontend-container backend-container || true'
                    sh 'docker rm frontend-container backend-container || true'
                    
                    sh 'docker run -d --name backend-container -p 3000:3000 meu-backend'
                    sh 'docker run -d --name frontend-container -p 80:80 meu-frontend'
                    
                    sleep 20
                }
            }
        }
        
        stage('✅ Verify') {
            steps {
                echo "4. ✅ Verificando deploy..."
                script {
                    sh 'docker ps'
                    sh """
                        echo " "
                        echo "🎉 DEPLOY COMPLETO!"
                        echo "🌐 Frontend: http://${EC2_IP}"
                        echo "🔧 Backend: http://${EC2_IP}:3000"
                        echo "⚙️ Jenkins: http://${EC2_IP}:8080"
                        echo " "
                    """
                }
            }
        }
    }
    
    post {
        always {
            echo "🧹 Finalizando pipeline..."
            deleteDir()
        }
        success {
            echo "✅ SUCESSO! App rodando em: http://${EC2_IP}"
        }
        failure {
            echo "❌ Erro no pipeline."
        }
    }
}