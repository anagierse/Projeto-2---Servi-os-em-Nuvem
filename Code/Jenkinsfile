pipeline {
    agent any
    
    environment {
        EC2_IP = "23.22.57.128"
    }

    stages {
        stage('📥 Checkout') {
            steps {
                echo "1. 📥 Baixando código..."
                checkout scm
            }
        }

        stage('🚀 Deploy com Docker Compose') {
            steps {
                echo "2. 🚀 Deploy com Docker Compose..."
                dir('Code') {
                    sh '''
                        docker-compose down
                        docker-compose build --no-cache
                        docker-compose up -d
                        sleep 20
                    '''
                }
            }
        }
        
        stage('✅ Verificação') {
            steps {
                echo "3. ✅ Verificando..."
                script {
                    sh 'docker-compose ps'
                    sh """
                        echo "🎉 Deploy completo!"
                        echo "🌐 Seu app: http://${EC2_IP}"
                    """
                }
            }
        }
    }

    post {
        always {
            echo "🧹 Finalizado"
        }
    }
}