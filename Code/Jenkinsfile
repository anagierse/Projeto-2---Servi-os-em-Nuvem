pipeline {
    agent any
    
    environment {
        DB_HOST = credentials('db-host')
        DB_USER = credentials('db-user')
        DB_PASSWORD = credentials('db-password')
        DB_NAME = credentials('db-name')
        DB_PORT = credentials('db-port')
    }
    
    stages {
        stage('ğŸ“¥ Checkout') {
            steps {
                checkout scm
                sh '''
                    echo "âœ… CÃ³digo baixado"
                    ls -la Code/
                '''
            }
        }
        
        stage('ğŸ³ Build Images') {
            steps {
                sh '''
                    echo "ğŸ”¨ Construindo Backend..."
                    docker build -t backend-app ./Code/backend
                    
                    echo "ğŸ”¨ Construindo Frontend..."
                    docker build -t frontend-app ./Code/frontend
                    
                    echo "âœ… Builds concluÃ­dos"
                '''
            }
        }
        
        stage('ğŸš€ Deploy') {
            steps {
                sh '''
                    echo "ğŸ›‘ Parando containers antigos..."
                    docker stop code-backend-1 code-frontend-1 2>/dev/null || echo "Containers nÃ£o existiam"
                    docker rm code-backend-1 code-frontend-1 2>/dev/null || echo "Containers jÃ¡ removidos"
                    
                    echo "ğŸ¯ Iniciando novos containers..."
                    
                    # Backend com variÃ¡veis das credenciais do Jenkins
                    docker run -d --name code-backend-1 -p 3000:3000 \
                      -e DB_HOST=${DB_HOST} \
                      -e DB_USER=${DB_USER} \
                      -e DB_PASSWORD=${DB_PASSWORD} \
                      -e DB_NAME=${DB_NAME} \
                      -e DB_PORT=${DB_PORT} \
                      backend-app
                      
                    # Frontend
                    docker run -d --name code-frontend-1 -p 80:80 \
                      frontend-app
                    
                    echo "â³ Aguardando 30 segundos..."
                    sleep 30
                '''
            }
        }
        
        stage('âœ… VerificaÃ§Ã£o') {
            steps {
                sh '''
                    echo "ğŸ“‹ Containers rodando:"
                    docker ps --format "table {{.Names}}\\t{{.Status}}\\t{{.Ports}}"
                    
                    echo "ğŸ” VariÃ¡veis no container:"
                    docker exec code-backend-1 printenv | grep DB
                    
                    echo "ğŸ§ª Testando Backend..."
                    if curl -s -f http://localhost:3000 > /dev/null; then
                        echo "ğŸ‰ BACKEND ONLINE - http://23.22.57.128:3000"
                    else
                        echo "âŒ BACKEND OFFLINE"
                        docker logs code-backend-1 --tail=20
                    fi
                    
                    echo "ğŸ§ª Testando Frontend..."
                    if curl -s -f http://localhost:80 > /dev/null; then
                        echo "ğŸ‰ FRONTEND ONLINE - http://23.22.57.128"
                    else
                        echo "âŒ FRONTEND OFFLINE"
                        docker logs code-frontend-1 --tail=10
                    fi
                '''
            }
        }
    }
    
    post {
        success {
            echo "ğŸŠ DEPLOY SUCESSO!"
            echo "ğŸŒ Frontend: http://23.22.57.128"
            echo "ğŸ”§ Backend: http://23.22.57.128:3000"
        }
        failure {
            echo "ğŸ’¥ DEPLOY FALHOU"
        }
    }
}