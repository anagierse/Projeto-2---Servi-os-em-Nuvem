pipeline {
    agent any
    
    environment {
        CODE_DIR = "${WORKSPACE}/Code"
    }
    
    stages {
        stage('📥 Checkout') {
            steps {
                checkout scm
                sh '''
                    echo "📁 Estrutura do projeto:"
                    ls -la $CODE_DIR
                    echo "✅ Checkout completo"
                '''
            }
        }
        
        stage('🐳 Build Containers') {
            steps {
                sh '''
                    echo "🔨 Build com Docker Compose..."
                    cd $CODE_DIR
                    docker-compose build
                    echo "✅ Builds concluídos"
                '''
            }
        }
        
        stage('🚀 Deploy') {
            steps {
                sh '''
                    echo "🛑 Parando containers antigos..."
                    cd $CODE_DIR
                    docker-compose down

                    echo "🎯 Iniciando novos containers..."
                    docker-compose up -d

                    echo "⏳ Aguardando inicialização..."
                    sleep 25
                '''
            }
        }
        
        stage('✅ Health Check') {
            steps {
                sh '''
                    echo "📊 Status dos containers:"
                    docker ps --format "table {{.Names}}\\t{{.Status}}\\t{{.Ports}}"

                    echo "🧪 Testando serviços..."
                    if curl -s -f http://localhost:3000 > /dev/null; then
                        echo "🎉 Backend ONLINE - http://localhost:3000"
                    else
                        echo "❌ Backend OFFLINE"
                        docker logs $(docker-compose ps -q backend) --tail=10
                    fi

                    if curl -s -f http://localhost:80 > /dev/null; then
                        echo "🎉 Frontend ONLINE - http://localhost"
                    else
                        echo "❌ Frontend OFFLINE"
                        docker logs $(docker-compose ps -q frontend) --tail=10
                    fi
                '''
            }
        }
    }
    
    post {
        success {
            echo "🎊 DEPLOY SUCESSO!"
            echo "🌐 Frontend: http://localhost"
            echo "🔧 Backend: http://localhost:3000"
        }
        failure {
            echo "💥 DEPLOY FALHOU"
        }
    }
}
