                    sh 'docker-compose build --no-cache'
                }
            }
        }
        
        stage('ğŸš€ Deploy') {
            steps {
                echo "3. ğŸš€ Fazendo deploy..."
                script {
                    dir('Code') {
                        sh 'docker-compose down || true'
                        sh 'docker-compose up -d'
                        sleep 20
                    }
                }
            }
        }
        
        stage('âœ… Health Check') {
            steps {
                echo "4. ğŸ” Verificando serviÃ§os..."
                script {
                    dir('Code') {
                        sh 'docker-compose ps'
