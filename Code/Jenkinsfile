pipeline {
    agent any
    
    stages {
        stage('📥 Checkout') {
            steps {
                checkout scm
                sh '''
                    echo "📁 Estrutura do projeto:"
                    ls -la Code/
                    echo "🔍 Verificando .env do repositório:"
                    cat Code/.env || echo "❌ .env não encontrado no repo"
                '''
            }
        }
        
        stage('🔧 Build Images') {
            steps {
                sh '''
                    echo "🐳 Construindo imagens..."
                    docker build -t backend-app ./Code/backend
                    docker build -t frontend-app ./Code/frontend
                    echo "✅ Imagens construídas"
                '''
            }
        }
        
        stage('🚀 Deploy com Variáveis Corretas') {
            steps {
                sh '''
                    echo "🔄 Reiniciando containers..."
                    
                    # Para e remove containers de app
                    docker stop code-backend-1 code-frontend-1 2>/dev/null || echo "Containers não existiam"
                    docker rm code-backend-1 code-frontend-1 2>/dev/null || echo "Containers já removidos"
                    
                    echo "🎯 Iniciando containers COM VARIÁVEIS CORRETAS..."
                    
                    # Backend com variáveis inline (substitua pelos seus valores reais)
                    docker run -d --name code-backend-1 -p 3000:3000 \
                      -e DB_HOST=receitas-db.xxxxx.us-east-1.rds.amazonaws.com \
                      -e DB_NAME=db_receitas \
                      -e DB_USER=receitas_admin \
                      -e DB_PASSWORD=MinhaSenhaSegura123 \
                      -e DB_PORT=5432 \
                      backend-app
                      
                    # Frontend
                    docker run -d --name code-frontend-1 -p 80:80 \
                      frontend-app
                    
                    echo "⏳ Aguardando inicialização..."
                    sleep 25
                '''
            }
        }
        
        stage('✅ Health Check') {
            steps {
                sh '''
                    echo "📊 Containers ativos:"
                    docker ps --format "table {{.Names}}\\t{{.Status}}\\t{{.Ports}}"
                    
                    echo "🔍 Verificando variáveis no container:"
                    docker exec code-backend-1 printenv | grep DB
                    
                    echo "🧪 Testando serviços..."
                    
                    # Teste backend
                    if curl -s -f http://localhost:3000 > /dev/null; then
                        echo "🎉 Backend ONLINE - http://23.22.57.128:3000"
                    else
                        echo "❌ Backend OFFLINE"
                        docker logs code-backend-1 --tail=15
                    fi
                    
                    # Teste frontend  
                    if curl -s -f http://localhost:80 > /dev/null; then
                        echo "🎉 Frontend ONLINE - http://23.22.57.128"
                    else
                        echo "❌ Frontend OFFLINE"
                        docker logs code-frontend-1 --tail=10
                    fi
                '''
            }
        }
    }
    
    post {
        success {
            echo "🎊 DEPLOY SUCESSO!"
            echo "🌐 Frontend: http://23.22.57.128"
            echo "🔧 Backend: http://23.22.57.128:3000"
        }
        failure {
            echo "💥 DEPLOY FALHOU"
        }
    }
}