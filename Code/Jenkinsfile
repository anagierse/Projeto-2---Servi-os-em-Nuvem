pipeline {
    agent any

    environment {
        WORKSPACE_CODE = "${WORKSPACE}/Code"
    }

    stages {
        stage('📥 Checkout') {
            steps {
                checkout scm
                sh """
                    echo "📁 Estrutura do projeto:"
                    ls -la $WORKSPACE_CODE
                    echo "✅ Checkout completo"
                """
            }
        }

        stage('🐳 Build Containers') {
            steps {
                sh """
                    echo "🔨 Build dos containers via docker-compose..."
                    cd $WORKSPACE_CODE
                    docker-compose build backend frontend
                    echo "✅ Build concluído"
                """
            }
        }

        stage('🚀 Deploy') {
            steps {
                sh """
                    echo "🛑 Parando containers antigos..."
                    cd $WORKSPACE_CODE
                    docker-compose down || true

                    echo "🎯 Subindo novos containers..."
                    docker-compose up -d backend frontend

                    echo "⏳ Aguardando inicialização..."
                    sleep 25
                """
            }
        }

        stage('✅ Health Check') {
            steps {
                sh """
                    echo "📊 Status dos containers:"
                    cd $WORKSPACE_CODE
                    docker-compose ps

                    echo "🧪 Testando serviços..."
                    
                    if curl -s -f http://localhost:3000 > /dev/null; then
                        echo "🎉 Backend ONLINE - http://23.22.57.128:3000"
                    else
                        echo "❌ Backend OFFLINE"
                        docker-compose logs backend --tail=10
                    fi

                    if curl -s -f http://localhost:80 > /dev/null; then
                        echo "🎉 Frontend ONLINE - http://23.22.57.128"
                    else
                        echo "❌ Frontend OFFLINE"
                        docker-compose logs frontend --tail=10
                    fi
                """
            }
        }
    }

    post {
        success {
            echo "🎊 DEPLOY SUCESSO!"
            echo "🌐 Frontend: http://23.22.57.128"
            echo "🔧 Backend: http://23.22.57.128:3000"
        }
        failure {
            echo "💥 DEPLOY FALHOU"
        }
    }
}
