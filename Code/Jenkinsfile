pipeline {
    agent any
    
    environment {
        EC2_IP = sh(script: "curl -s http://169.254.169.254/latest/meta-data/public-ipv4", returnStdout: true).trim()
    }
    
    stages {
        stage('📥 Checkout Code') {
            steps {
                echo "1. 📥 Baixando código do GitHub..."
                checkout scm
                sh 'echo "📁 Estrutura de pastas:" && ls -la'
                sh 'echo "📁 Conteúdo da pasta Code:" && ls -la Code/'
            }
        }
        
        stage('🔨 Build Images') {
            steps {
                echo "2. 🐳 Construindo imagens Docker..."
                dir('Code') {
                    sh '/usr/local/bin/docker-compose build --no-cache'
                }
            }
        }
        
        stage('🚀 Deploy') {
            steps {
                echo "3. 🚀 Fazendo deploy..."
                script {
                    dir('Code') {
                        sh '/usr/local/bin/docker-compose down || true'
                        sh '/usr/local/bin/docker-compose up -d'
                        sleep 25
                    }
                }
            }
        }
        
        stage('✅ Health Check') {
            steps {
                echo "4. 🔍 Verificando serviços..."
                script {
                    dir('Code') {
                        sh '/usr/local/bin/docker-compose ps'
                    }
                    sh """
                        echo " "
                        echo "🎉 DEPLOY COMPLETO!"
                        echo "🌐 Frontend: http://${EC2_IP}"
                        echo "🔧 Backend: http://${EC2_IP}:3000"
                        echo "⚙️ Jenkins: http://${EC2_IP}:8080"
                        echo " "
                    """
                }
            }
        }
    }
    
    post {
        always {
            echo "🧹 Finalizando pipeline..."
            deleteDir()
        }
        success {
            echo "✅ SUCESSO TOTAL! App rodando em: http://${EC2_IP}"
        }
        failure {
            echo "❌ Algo deu errado. Verifique os logs acima."
        }
    }
}