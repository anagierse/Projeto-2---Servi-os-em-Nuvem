pipeline {
    agent any
    
    stages {
        stage('📥 Checkout') {
            steps {
                checkout scm
                sh 'ls -la'
            }
        }
        
        stage('🐳 Build e Deploy') {
            steps {
                sh '''
                    docker-compose down
                    docker-compose build --no-cache
                    docker-compose up -d
                    sleep 30
                '''
            }
        }
        
        stage('✅ Testes') {
            steps {
                sh '''
                    docker-compose ps
                    curl -f http://localhost:3000 && echo "✅ Backend OK" || echo "❌ Backend FAIL"
                    curl -f http://localhost:80 && echo "✅ Frontend OK" || echo "❌ Frontend FAIL"
                '''
            }
        }
    }
    
    post {
        success {
            echo '🎉 SUCCESS!'
            echo '🌐 http://23.22.57.128'
        }
    }
}