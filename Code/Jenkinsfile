pipeline {
    agent any
    
    stages {
        stage('ğŸ“¥ Checkout') {
            steps {
                checkout scm
                sh '''
                    echo "ğŸ“ Estrutura do projeto:"
                    ls -la Code/
                    echo "âœ… Checkout completo"
                '''
            }
        }
        
        stage('ğŸ³ Build Containers') {
            steps {
                sh '''
                    echo "ğŸ”¨ Build Backend..."
                    cd Code/backend && docker build -t code-backend . && cd ../..
                    
                    echo "ğŸ”¨ Build Frontend..."
                    cd Code/frontend && docker build -t code-frontend . && cd ../..
                    
                    echo "âœ… Builds concluÃ­dos"
                '''
            }
        }
        
        stage('ğŸš€ Deploy') {
            steps {
                sh '''
                    echo "ğŸ›‘ Parando containers antigos..."
                    docker stop code-backend-1 code-frontend-1 2>/dev/null || true
                    docker rm code-backend-1 code-frontend-1 2>/dev/null || true
                    
                    echo "ğŸ¯ Iniciando novos containers..."
                    docker run -d --name code-backend-1 -p 3000:3000 code-backend
                    docker run -d --name code-frontend-1 -p 80:80 code-frontend
                    
                    echo "â³ Aguardando inicializaÃ§Ã£o..."
                    sleep 25
                '''
            }
        }
        
        stage('âœ… Health Check') {
            steps {
                sh '''
                    echo "ğŸ“Š Status dos containers:"
                    docker ps --format "table {{.Names}}\\t{{.Status}}\\t{{.Ports}}"
                    
                    echo "ğŸ§ª Testando serviÃ§os..."
                    
                    if curl -s -f http://localhost:3000 > /dev/null; then
                        echo "ğŸ‰ Backend ONLINE - http://23.22.57.128:3000"
                    else
                        echo "âŒ Backend OFFLINE"
                        docker logs code-backend-1 --tail=10
                    fi
                    
                    if curl -s -f http://localhost:80 > /dev/null; then
                        echo "ğŸ‰ Frontend ONLINE - http://23.22.57.128"
                    else
                        echo "âŒ Frontend OFFLINE"
                        docker logs code-frontend-1 --tail=10
                    fi
                '''
            }
        }
    }
    
    post {
        success {
            echo "ğŸŠ DEPLOY SUCESSO!"
            echo "ğŸŒ Frontend: http://23.22.57.128"
            echo "ğŸ”§ Backend: http://23.22.57.128:3000"
        }
