                    """
                }
            }
        }
    }
    
    post {
        always {
            echo "ğŸ§¹ Finalizando pipeline..."
            deleteDir()
        }
        success {
            echo "âœ… SUCESSO! App disponÃ­vel em: http://${EC2_IP}"
        }
